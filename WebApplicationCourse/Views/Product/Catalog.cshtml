@model List<Product>
@{
    ViewData["Title"] = "Каталог";
}
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3 card">
            <img class="card-img-top" src=@product.ImagePath>
            <div class="card-body">
                <p>@product.Name</p>
                <p>@product.Cost руб</p>
                <a class="btn btn-dark" href="/product/index/@product.Id">Подробнее</a>
                <a class="btn btn-dark" href="/cart/add?productid=@product.Id">Добавить в корзину</a>
            </div>
        </div>
    }
</div>