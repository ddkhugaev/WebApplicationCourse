@model User

<form method="post" class="text-center col-3">
    <div class="mb-3">
        <label>Вход</label>
    </div>
    <div class="mb-3">
        <label asp-for="Login">Логин</label>
        <input asp-for="Login" type="text" class="form-control" placeholder="Логин">
        <span asp-validation-for="Login"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Password">Пароль</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Пароль">
        <span asp-validation-for="Login"></span>
    </div>
    <div class="mb-3">
        <input type="checkbox" class="form-check-input" name="isMemento">
        <label class="form-check-label">Запомнить меня?</label>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Войти</button>
    </div>
    <div class="mb-3">
        <a href="/user/registration">Регистрация нового пользователя</a>
    </div>
</form>